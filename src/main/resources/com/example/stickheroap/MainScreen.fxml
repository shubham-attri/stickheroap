<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.stickheroap.HelloController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Character -->
    <Rectangle fx:id="character" width="30" height="30" fill="BLUE" />

    <!-- Platform -->
    <Rectangle fx:id="platform" width="100" height="10" fill="GREEN" />

    <!-- Stick -->
    <Rectangle fx:id="stick" width="5" height="1" fill="BROWN" />

    <!-- Score Display -->
    <Label fx:id="scoreLabel" text="Score: 0" layoutX="10" layoutY="10" />


</AnchorPane>
